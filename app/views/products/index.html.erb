<h1> Listing All Products</h1>

<p>
<%= link_to "Create new product", new_product_path %>
</p>

<table>
<tr>
  <th>Title</th>
  <th>Description</th>
</tr>

<% @products.each do |product| %>
<tr>
  <td><%= product.title %></td>
  <td><%= product.description %></td>
  <td><%= link_to 'Edit', edit_product_path(product) %></td></td>
  <td><%= link_to 'Show', product_path(product) %></td></td>
  <td><%= link_to 'Kill', product_path(product), method: :delete, data: {confirm: "Are you sure?"} %></td></td>

</tr>
<% end %>

</table>
